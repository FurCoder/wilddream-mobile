.edit-profile
    min-height: 100%
    box-sizing: border-box

    .tab-switcher
        margin-top: 15px
        // margin-top: constant(safe-area-inset-top)
        // margin-top: env(safe-area-inset-top)

    .edit-profile-avator
        padding: 15px 15px

        .intro
            line-height 27px
            font-size: 13px
            color: #fff
            margin: 10px 0
        
        .prev-avator
            height 80px
            width 80px
            object-fit: cover
            
        .next-avator
            height 100px
            width 100px
            object-fit: cover
        .upload-button
            margin-top: 10px
            position relative
            height 32px
            line-height: 32px
            width: 86px
            text-align: center
            background: #515b6d
            color: #fff
            border-radius: 4px

            input
                opacity: 0
                background: #fff
                position: absolute
                left: 0
                top: 0
                height: 32px
                width: 100%
        .submit-button
            margin-top: 10px

    .edit-base-form
        margin: 15px
        input
            border-radius: 2px
        .input-line
            display flex
            flex-flow: column nowrap
            align-items: flex-start

            .label
                box-sizing: border-box
                font-size: 12px
                color: #ffffff
                height fit-content
                line-height: 22px

            .input-area
                width: 100%

    .submit-button
        background: #4e5d6c
        color: #ffffff
        border none

        