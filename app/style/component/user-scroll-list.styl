.user-scroll-list
    padding: 5px 0px
    overflow hidden

    .fav-title
        padding: 0 15px
        line-height: 40px
        font-size: 20px
        color: #ffffff

    .fav-user-list  
        padding: 0 15px
        overflow-y hidden
        overflow-x scroll
        height 40px
        display flex
        flex-flow: row nowrap
        padding-bottom: 2em
        margin-bottom: -2em
        &:after
            height: 0;
            width: calc(100%/40px);
            content: "";
    .fav-avatar
        height 40px
        width: 40px
        display inline-block
        background: #9999ff
        border-radius: 40px
        flex-shrink: 0
        margin-left: -7px;
        &:first-child
            margin-left: 0